# Supabase (obrigatorio - use a SERVICE ROLE KEY, nao a anon key)
SUPABASE_URL=https://seu-projeto.supabase.co
SUPABASE_SERVICE_KEY=sua-service-role-key-aqui

# Ollama (LLM local - PADRAO, custo zero)
OLLAMA_URL=http://ollama:11434
SOPHIA_MODEL=llama3.1:8b

# Claude API (OPCIONAL - so usa se Ollama offline ou FORCE_CLAUDE=true)
# ANTHROPIC_API_KEY=sk-ant-...
# FORCE_CLAUDE=false

# ChromaDB (base de conhecimento vetorial / RAG)
CHROMA_URL=http://chromadb:8000
CHROMA_COLLECTION=doctor_auto_kb

# Redis (filas + cache + pub/sub)
REDIS_URL=redis://redis:6379

# Kommo CRM (quando tiver a API key)
# KOMMO_API_KEY=
# KOMMO_SUBDOMAIN=

# Bot SQL
BOT_SQL_PORT=3001

# Sophia HTTP Server (Command Center se conecta aqui via Nginx)
SOPHIA_PORT=3000

# Worker config
POLL_INTERVAL_MS=5000
PRINCESS_POLL_MS=8000
LOG_LEVEL=info

# Dominio (pra Nginx SSL)
DOMAIN=ia.doctorauto.com.br
